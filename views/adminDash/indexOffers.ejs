<%- include('header.ejs') %>

<body>
  <div class="screen-overlay"></div>
  <%- include('navbar-aside.ejs') %>
  <main class="main-wrap">
    <section class="content-main">
      <div class="content-header">
        <div>
          <h2 class="content-title card-title">Offers</h2>
          <p>Add, edit, or delete offers</p>
        </div>
        <div>
          <input
            type="text"
            placeholder="Search Categories"
            class="form-control bg-white"
          />
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-4">
            <h3>Product Offers</h3>

              <form id="categoryForm" action="/admin/coupon" method="post">
                <div class="mb-4">
                  <label for="product_name" class="form-label"
                    >Offer Name</label
                  >
                  <input
                    type="text"
                    placeholder="Type here"
                    class="form-control"
                    id="offer"
                    name="offer_name"
                    minlength="3"
                    maxlength="50"
                  />
                  <div id="nameError" class="text-danger"></div>
                </div>
                <div class="mb-4">
                    <label for="productOrCategory" class="form-label">Product or Category</label>
                    <select class="form-select" id="productOrCategory" name="product_or_category">
                        <% if (product && product.length > 0) { %>
                            <% for (var i = 0; i < product.length; i++) { %>
                                <option value="<%= product[i].title %>"><%= product[i].title %></option>
                            <% } %>
                        <% } else { %>
                            <option value="product">No Product Available</option>
                        <% } %>
                    </select>
                </div>
                
                <div class="mb-4">
                  <label for="couponCode" class="form-label"> Percentage Of Discount</label>
                  <input
                    type="text"
                    placeholder="Type here"
                    class="form-control"
                    id="percentage"
                    name="percentage"
                    minlength="3"
                    maxlength="50"
                  />
                </div>
                <div id="couponCodeError" class="text-danger"></div>

                <div class="mb-4">
                  <label for="product_slug" class="form-label"
                    >Discount Amount</label
                  >
                  <input
                    type="number"
                    placeholder="Type here"
                    class="form-control"
                    id="product_slug"
                    name="discountAmount"
                    minlength="3"
                    maxlength="50"
                  />
                  <div id="slugError" class="text-danger"></div>
                </div>

                <div class="mb-4">
                  <label class="form-label">Description</label>
                  <input
                    placeholder="Type here"
                    class="form-control"
                    id="offer_description"
                    name="description"
                  />
                  <div id="descriptionError" class="text-danger"></div>
                </div>
                <div class="mb-4">
                    <label for="product_slug" class="form-label"
                      >Starting Date</label
                    >
                    <input
                      type="date"
                      placeholder="Type here"
                      class="form-control"
                      id="product_slug"
                      name="startingDate"
                      minlength="3"
                      maxlength="50"
                      required
                    />
                    <div id="product_slugs" class="text-danger"></div>
                  </div>
                <div class="mb-4">
                  <label for="product_slug" class="form-label"
                    >Expiry Date</label
                  >
                  <input
                    type="date"
                    placeholder="Type here"
                    class="form-control"
                    id="product_slug"
                    name="expiryDate"
                    minlength="3"
                    maxlength="50"
                    required
                  />
                  <div id="product_slugs" class="text-danger"></div>
                </div>
                <div class="d-grid">
                  <button
                    type="button"
                    class="btn btn-primary edit-coupon-button"
                    id="edit-coupon-button"
                    onclick="validateForm()"
                  >
                    Add Coupon
                  </button>
                </div>
             
              </form>
