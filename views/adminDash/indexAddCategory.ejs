<%- include('header.ejs') %>

<body>
  <div class="screen-overlay"></div>
  <%- include('navbar-aside.ejs') %>
  <main class="main-wrap">
    <section class="content-main">
      <div class="content-header">
        <div>
          <h2 class="content-title card-title">Categories</h2>
          <p>Add, edit, or delete a category</p>
        </div>
        <div>
          <input
            type="text"
            placeholder="Search Categories"
            class="form-control bg-white"
          />
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-3">
              <form id="categoryForm" action="" method="post">
                <div class="mb-4">
                  <label for="product_name" class="form-label"
                    >Category Title</label
                  >
                  <input
                    type="text"
                    placeholder="Type here"
                    class="form-control"
                    id="product_name"
                    name="title"
                    minlength="3"
                    maxlength="50"
                  />
                  <div id="nameError" class="text-danger"></div>
                </div>
                <div class="mb-4">
                  <label for="product_slug" class="form-label">Slug</label>
                  <input
                    type="text"
                    placeholder="Type here"
                    class="form-control"
                    id="product_slug"
                    name="slug"
                    minlength="3"
                    maxlength="50"
                  />
                  <div id="slugError" class="text-danger"></div>
                </div>
                <div class="mb-4">
                  <label class="form-label">Description</label>
                  <input
                    placeholder="Type here"
                    class="form-control"
                    id="product_description"
                    name="description"
                  />
                  <div id="descriptionError" class="text-danger"></div>
                </div>
                <div class="d-grid">
                  <button
                    type="button"
                    onclick="validateForm()"
                    class="btn btn-primary"
                  >
                    Create category
                  </button>
                </div>
                <% if(message && message.length > 0) { %>
                <p style="color: rgb(208, 6, 6)"><%= message %></p>
                <% } %>
              </form>
            </div>
            <div class="col-md-9">
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Title</th>
                      <th>Slug</th>
                      <th>List</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if(getallCategory.length > 0) { for(let i = 0; i <
                    getallCategory.length; i++) { %>
                    <tr>
                      <td><%= getallCategory[i].title %></td>
                      <td><%= getallCategory[i].slug %></td>
                      <td>
                        <% if (getallCategory[i].list) { %> Yes <% } else { %>
                        No <% } %>
                      </td>
                      <td>
                        <div class="dropdown">
                          <a
                            href="#"
                            data-bs-toggle="dropdown"
                            class="btn btn-light rounded btn-sm font-sm"
                          >
                            <i class="material-icons md-more_horiz"></i>
                          </a>
                          <div class="dropdown-menu">
                            <a
                              class="dropdown-item"
                              href="/admin/category/edit/<%= getallCategory[i]._id %>"
                              >Edit info</a
                            >
                            <a
                              class="dropdown-item text-danger"
                              href="#"
                              onclick="confirmDelete('<%= getallCategory[i]._id %>')"
                              >Delete</a
                            >
                          </div>
                        </div>
                        <!-- dropdown //end -->
                      </td>
                    </tr>
                    <% } } else { %>
                    <td colspan="5">Users Not Found</td>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <%- include('footer.ejs') %>
    <script>
      function confirmDelete(categoryId) {
        var result = confirm("Are you sure you want to delete this category?");
        if (result) {
          window.location.href = "/admin/category/delete/" + categoryId;
        }
      }
    </script>
    <script>
      function validateForm() {
        var isValid = true;

        // Validate Category Title
        var titleInput = $("#product_name");
        var titleError = $("#nameError");
        var titleValue = titleInput.val().trim();
        if (
          titleValue.length < 3 ||
          titleValue.length > 20 ||
          /^\s/.test(titleValue)
        ) {
          titleError.text(
            " Title should be between 3 and 20 characters and should not start with a space."
          );
          isValid = false;
        } else {
          titleError.text("");
        }

        // Validate Slug
        var slugInput = $("#product_slug");
        var slugError = $("#slugError");
        var slugValue = slugInput.val().trim();
        if (
          slugValue.length < 3 ||
          slugValue.length > 20 ||
          /^\s/.test(slugValue)
        ) {
          slugError.text(
            "Slug should be between 3 and 20 characters and should not start with a space."
          );
          isValid = false;
        } else {
          slugError.text("");
        }

        // Validate Description
        var descriptionInput = $("#product_description");
        var descriptionError = $("#descriptionError");
        var descriptionValue = descriptionInput.val().trim();
        var wordCount = descriptionValue.split(/\s+/).filter(function (word) {
          return word.length > 0;
        }).length;
        if (wordCount < 5) {
          descriptionError.text("Description should have at least 5 words.");
          isValid = false;
        } else {
          descriptionError.text("");
        }

        // Perform additional validations for other fields if needed

        if (isValid) {
          // If all validations pass, submit the form
          $("#categoryForm").submit();
        }
      }
    </script>
  </main>
</body>
