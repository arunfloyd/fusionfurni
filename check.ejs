<tbody>
    <% if (cart && product && product.length > 0) { %>
      <% for (let i = 0; i < product.length; i++) { %>
        <tr>
          <% if (product[i].images && product[i].images.length > 0) { %>
            <% for (let j = 0; j < product[i].images.length; j++) { %>
              <td class="product-thumbnail">
                <img src="/productImage/<%= product[i].images[j] %>" alt="Image" class="img-fluid">
              </td>
            <% } %>
          <% } %>
          
          <td class="product-name">
            <h2 class="h5 text-black"><%= product[i].title %> </h2>
          </td>
          <td><%= product[i].price %></td>
          <td>
            <div class="input-group mb-3 d-flex align-items-center quantity-container" style="max-width: 120px;">
              <div class="input-group-prepend">
                <button class="btn btn-outline-black decrease" type="button">&minus;</button>
              </div>
              <input type="text" class="form-control text-center quantity-amount" value="<%= product[i].quantity %>" placeholder="" aria-label="Example text with button addon" aria-describedby="button-addon1">
              <div class="input-group-append">
                <button class="btn btn-outline-black increase" type="button">&plus;</button>
              </div>
            </div>
          </td>
          <td><a href="#" class="btn btn-black btn-sm">X</a></td>
        </tr>
      <% } %>
    <% } else { %>
      <tr>
        <td colspan="5">
          <p>Product is Empty</p>
        </td>
      </tr>
    <% } %>
  </tbody>

